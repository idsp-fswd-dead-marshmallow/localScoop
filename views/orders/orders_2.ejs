<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="../../styles.css">
    <style>
        .shop-setup-header {
            padding-top: 15px;
        }

        .p-3 {
            width: 50%;
        }
        .yellow-bn {
            max-width: 80%;
            align-self: flex-end;
        }
        .productCard {
            max-width: 75%;
            max-height: 120px;
            display: flex;
            justify-content: center;
            flex-direction: row;
            align-self: start;
            margin-left:20px;
        }
        p {
            margin: 5px;
            padding:0px;
            font-size: small;
        }
        
        h5{
            margin-top: 0px;
            margin-bottom: 5px;
            margin-left: 10px;
            font-weight: normal;
            font-size: small;
        }
        h6 {
            margin-top: 0px;
            margin-bottom: 5px;
            margin-left: 10px;
            font-weight: normal;
            font-size:x-small;
        }
        .cardDiv {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
    </style>
    <title>orders_2</title>
</head>


<header class="shop-setup-header">
    <div>
        <h4>Sold Products</h4>
    </div>
</header>
<body>
    <div class="cardDiv">
        <% for( let index = 0; index < productListInfo.length; index++ ) { %>
            <div class="productCard">
                <div class="imageDiv">
                    <img src="https://picsum.photos/<%= 100 %>" class="draftImg">
                </div>
                <div class="textdiv">
                    <h6><%= productListInfo[index].itemName %> </h6>
                    <h5><%= productListInfo[index].deliveryStatus %></h5>
                    <h5><%= productListInfo[index].feedbackStatus %></h5>
                    <h6><%= productListInfo[index].time %></h6>
                </div>
            </div>
        <% } %>
    </div>
    <div>
        <a href="https://www.istockphoto.com/photo/a-white-sneaker-gm1204613760-346679630"></a>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>
